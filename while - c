WHILE LOOP

#include <stdio.h>
int main()
{    
    int p,n,count;
    float r,si;
    
	count = 1;
    while(count<=3)
    {
    	printf("\nEnter the values of p,n and r");
    	scanf("%d %d %f",&p, &n, &r);
    	si = p*n*r/100;
    	printf("simple interest = Rs.%\nf", si);
    	
    	count = count+1;
	}
	return 0;
}




NESTED WHILE LOOP

#include <stdio.h>
main()
{
	int i = 0, j = 0;
	while(++i <= 5)
	{
		while(++j <= 5)
		{
			printf("%d\n", j);
		}
		printf("%d\n", j);
	}

}
